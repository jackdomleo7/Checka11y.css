{
  "name": "checka11y-css-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Documentation website for Checka11y.css.",
  "main": "index.js",
  "scripts": {
    "docs": "npm run lint:fix && sass --no-source-map scss/docs.scss css/docs.min.css && sass --no-source-map scss/checka11y.scss css/checka11y.min.css && sass --no-source-map scss/prism.scss css/prism.min.css && npx postcss css --use autoprefixer cssnano --replace && npx sitemap-generator-cli https://checka11y.jackdomleo.dev --last-mod",
    "serve": "http-server ./ --port 1234 -a localhost",
    "lint:check": "stylelint \"**/*.scss\"",
    "lint:fix": "stylelint \"**/*.scss\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackdomleo7/Checka11y.css.git"
  },
  "author": {
    "name": "Jack Domleo",
    "url": "https://jackdomleo.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jackdomleo7/Checka11y.css/issues"
  },
  "dependencies": {
    "checka11y-css": "^2.4.0",
    "normalize.css": "^8.0.1"
  },
  "homepage": "https://checka11y.jackdomleo.dev",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^5.1.15",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^9.1.0",
    "sass": "^1.92.1",
    "sitemap-generator-cli": "^7.5.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^3.0.0"
  }
}
